            <group id="support" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <frontend_model>Dazoot\Newsmanmarketing\Block\Adminhtml\System\Support</frontend_model>
            </group>
        </section>
    </system>
